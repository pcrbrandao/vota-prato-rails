<p id="comentario_<%=comentario.id%>">
    <%= comentario.conteudo %> -
    <%= link_to 'remover', comentario, method: :delete,
        remote: true,
        id: "remove_comentario_#{comentario.id}" %>
</p>

<% content_for :js do %>
$("#remove_comentario_<%=comentario.id%>").on("ajax:success", 
    function(){
            $("#comentario_<%=comentario.id%>").remove();
    });
<% end %>
